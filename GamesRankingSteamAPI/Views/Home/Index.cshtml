@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/pagestyles.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
</head>

<div class="text-center">
    <div class="col-sm-7 col-md-5 mx-auto card-signin bg-dark">
        <div class="card-body">
            <div class="card-header bg-info justify-content-center">
                <h4 style="color:white; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;">Top 10 - Most popular games</h4>
            </div>
        </div>
        <div id="canvas-holder" class="canvas-holder mx-auto" style="position: relative;">
            <canvas id="myChart" width="450", height="450"></canvas>
        </div>
        <div class="pl-2 pr-2 pb-2">
            <span class="text-muted" style="color:white">Collecting data of the most popular games by their playing user count is happening at 3PM each Saturday.</span>
        </div>
    </div>
    <partial name="_searchbar" />
    <partial name="_listgroup" />
</div>

@section Scripts{
    <script src="~/js/doughchart.js"></script>
}


@{
    ViewData["Title"] = "Home Page";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
</head>
<div class="text-center">
    <div class="container justify-content-center">
        <div class="card bg-dark" style="margin:auto;">
            <div class="card-header">
                <h4 style="color:white">Top 10 - Most popular games</h4>
            </div>
            <div class="card-body">
                <canvas id="doughnut-chart" width="950" height="400"></canvas>
            </div>
            <div>
                <span class="text-muted" style="color:white">Collecting data of the most popular games by their playing user count is happening at 3PM each Saturday.</span>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/doughchart.js"></script>
}
